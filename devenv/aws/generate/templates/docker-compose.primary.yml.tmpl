version: '3.8'
services:
  postgres:
    image: postgres:14
    environment:
      POSTGRES_DB: {{.DbName}}
      POSTGRES_USER: {{.DbUser}}
      POSTGRES_PASSWORD: {{.DbPassword}}
    volumes:
      - ./init-scripts:/docker-entrypoint-initdb.d/
      - postgres_data:/var/lib/postgresql/data/primary
    ports:
      - "5432:5432"
    command: |
      postgres
      -c wal_level={{.WalLevel}}
      -c max_wal_senders={{.MaxWalSenders}}
      -c wal_keep_size={{.WalKeepSize}}
      -c hot_standby={{.HotStandby}}
      -c synchronous_commit={{.SynchronousCommit}}
    restart: unless-stopped

volumes:
  postgres_data:
