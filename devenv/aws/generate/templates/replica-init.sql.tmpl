DO $$
BEGIN
    RAISE NOTICE 'Replica PostgreSQL database initialized successfully';
    RAISE NOTICE 'Admin user: {{.DbUser}}';
    RAISE NOTICE 'Replica slot: {{.ReplicationSlot}}';
END $$;
